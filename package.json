{
  "name": "temperature-api",
  "version": "1.0.0",
  "private": true,
  "description": "Temperature API",
  "keywords": [
    "zod",
    "openapi",
    "typesafe",
    "typescript"
  ],
  "license": "MIT",
  "main": "src/index.ts",
  "scripts": {
    "build": "run-p build:*",
    "build:spec": "node -r @swc-node/register src/generate.ts > openapi.json",
    "build:test": "jest -b --coverage --silent",
    "build:tsc": "tsc --noEmit",
    "dev": "run-p dev:* -l",
    "dev:start": "node --watch -r @swc-node/register src/index.ts",
    "dev:test": "jest --watch --colors --errorOnDeprecated",
    "dev:tsc": "tsc --watch --noEmit --pretty",
    "start": "node -r @swc-node/register src/index.ts",
    "prepare": "husky install"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    }
  },
  "dependencies": {
    "@swc-node/register": "^1.5.5",
    "@zodios/core": "^10.7.5",
    "@zodios/express": "^10.4.4",
    "@zodios/openapi": "^10.4.7",
    "express": "^4.18.2",
    "swagger-ui-express": "^4.6.0",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@swc/jest": "^0.2.24",
    "@tsconfig/node-lts-strictest": "^18.12.1",
    "@types/express": "^4.17.16",
    "@types/jest": "^29.4.0",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "husky": "^8.0.3",
    "jest": "^29.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "pretty-quick": "^3.1.3",
    "supertest": "^6.3.3",
    "typescript": "^4.9.5"
  }
}
